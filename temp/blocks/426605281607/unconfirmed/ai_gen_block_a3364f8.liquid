{% doc %}
  @prompt
    A website hero section with a light purple background. On the left side, bold black heading text reads "Clean designs made to move with your life," with smaller gray subtext underneath describing the brandâ€™s philosophy. Below the text is a white "Shop Now" button. On the right side, there is a stylized logo

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
    min-height: {{ block.settings.min_height }}px;
    display: flex;
    align-items: center;
  }

  .ai-hero-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: bold;
    color: {{ block.settings.heading_color }};
    line-height: 1.2;
    margin: 0;
  }

  .ai-hero-subtext-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtext_size }}px;
    color: {{ block.settings.subtext_color }};
    line-height: 1.5;
    margin: 0;
  }

  .ai-hero-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 32px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .ai-hero-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-hero-logo-container-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-logo-{{ ai_gen_id }} {
    max-width: 100%;
    height: auto;
    max-height: {{ block.settings.logo_max_height }}px;
  }

  .ai-hero-logo-placeholder-{{ ai_gen_id }} {
    width: 100%;
    max-width: 400px;
    height: 300px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    position: relative;
  }

  .ai-hero-logo-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: rgba(0, 0, 0, 0.5);
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-hero-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-hero-subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtext_size | times: 0.9 }}px;
    }

    .ai-hero-button-{{ ai_gen_id }} {
      align-self: center;
    }

    .ai-hero-logo-placeholder-{{ ai_gen_id }} {
      max-width: 300px;
      height: 200px;
    }
  }
{% endstyle %}

<div class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-container-{{ ai_gen_id }}">
    <div class="ai-hero-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
      {% endif %}
      
      {% if block.settings.subtext != blank %}
        <div class="ai-hero-subtext-{{ ai_gen_id }}">{{ block.settings.subtext }}</div>
      {% endif %}
      
      {% if block.settings.button_text != blank %}
        <a href="{{ block.settings.button_link }}" class="ai-hero-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
    
    <div class="ai-hero-logo-container-{{ ai_gen_id }}">
      {% if block.settings.logo %}
        <img
          src="{{ block.settings.logo | image_url: width: 800 }}"
          alt="{{ block.settings.logo.alt | escape }}"
          class="ai-hero-logo-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.logo.width }}"
          height="{{ block.settings.logo.height }}"
        >
      {% else %}
        <div class="ai-hero-logo-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}<div class="ai-hero-empty-state-{{ ai_gen_id }}">
            Add your logo here
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

