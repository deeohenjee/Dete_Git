{% doc %}
  @prompt
    i need a gold announcement bar telling the customer "Welcome To Our Store"

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-announcement-bar-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding }}px 20px;
    text-align: {{ block.settings.text_alignment }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    border-bottom: {{ block.settings.border_thickness }}px solid {{ block.settings.border_color }};
    position: relative;
    overflow: hidden;
  }

  .ai-announcement-bar-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, {{ block.settings.shine_opacity }}) 50%,
      transparent
    );
    animation: ai-announcement-shine-{{ ai_gen_id }} {{ block.settings.shine_duration }}s infinite;
  }

  .ai-announcement-bar__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 1;
    max-width: 100%;
  }

  @keyframes ai-announcement-shine-{{ ai_gen_id }} {
    0% {
      left: -100%;
    }
    100% {
      left: 100%;
    }
  }

  {% if block.settings.enable_shine == false %}
    .ai-announcement-bar-{{ ai_gen_id }}::before {
      display: none;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-announcement-bar-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
      padding: {{ block.settings.padding | times: 0.8 }}px 15px;
    }
  }
{% endstyle %}

<div class="ai-announcement-bar-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-announcement-bar__content-{{ ai_gen_id }}">
    {{ block.settings.announcement_text }}
  </div>
</div>

