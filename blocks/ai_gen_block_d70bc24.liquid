{% doc %}
  @prompt
    add a catalog with this background: radial-gradient(#fff,#cbb9cb); and a light purple background

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-catalog-container-{{ ai_gen_id }} {
    background: {{ block.settings.background_gradient }};
    padding: {{ block.settings.section_padding }}px;
    min-height: 400px;
  }

  .ai-catalog-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-catalog-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-catalog-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_margin }}px 0;
    font-weight: 600;
  }

  .ai-catalog-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-catalog-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax({{ block.settings.card_min_width }}px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.grid_margin }}px;
  }

  .ai-catalog-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: 0 {{ block.settings.card_shadow_y }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-align: {{ block.settings.card_text_alignment }};
  }

  .ai-catalog-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.card_hover_lift }}px);
    box-shadow: 0 {{ block.settings.card_shadow_y | plus: 4 }}px {{ block.settings.card_shadow_blur | plus: 8 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 | times: 1.5 }});
  }

  .ai-catalog-card-image-wrapper-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.image_margin }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-catalog-card-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-catalog-card-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-catalog-card-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-catalog-card-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 {{ block.settings.card_title_margin }}px 0;
    font-weight: 600;
  }

  .ai-catalog-card-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_description_size }}px;
    color: {{ block.settings.card_description_color }};
    margin: 0 0 {{ block.settings.card_description_margin }}px 0;
    line-height: 1.4;
  }

  .ai-catalog-card-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_price_size }}px;
    color: {{ block.settings.card_price_color }};
    font-weight: 600;
    margin: 0 0 {{ block.settings.card_price_margin }}px 0;
  }

  .ai-catalog-card-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_y }}px {{ block.settings.button_padding_x }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 500;
    transition: background-color 0.3s ease, transform 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .ai-catalog-card-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    transform: translateY(-1px);
  }

  .ai-catalog-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-catalog-empty-state-title-{{ ai_gen_id }} {
    font-size: 24px;
    margin: 0 0 16px 0;
    color: #333;
  }

  .ai-catalog-empty-state-text-{{ ai_gen_id }} {
    font-size: 16px;
    margin: 0;
  }

  @media screen and (max-width: 768px) {
    .ai-catalog-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
    
    .ai-catalog-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }
    
    .ai-catalog-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-catalog-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-catalog-wrapper-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.description != blank %}
      <div class="ai-catalog-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-catalog-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <div class="ai-catalog-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.featured_collection != blank %}
      <div class="ai-catalog-grid-{{ ai_gen_id }}">
        {% for product in block.settings.featured_collection.products limit: block.settings.products_limit %}
          <div class="ai-catalog-card-{{ ai_gen_id }}">
            <div class="ai-catalog-card-image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-catalog-card-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="400"
                  height="{{ block.settings.image_height }}"
                >
              {% else %}
                <div class="ai-catalog-card-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            {% if block.settings.show_product_title %}
              <h3 class="ai-catalog-card-title-{{ ai_gen_id }}">{{ product.title }}</h3>
            {% endif %}

            {% if block.settings.show_product_description and product.description != blank %}
              <div class="ai-catalog-card-description-{{ ai_gen_id }}">
                {{ product.description | strip_html | truncate: block.settings.description_length }}
              </div>
            {% endif %}

            {% if block.settings.show_product_price %}
              <div class="ai-catalog-card-price-{{ ai_gen_id }}">
                {% if product.compare_at_price > product.price %}
                  <span style="text-decoration: line-through; opacity: 0.7;">{{ product.compare_at_price | money }}</span>
                {% endif %}
                {{ product.price | money }}
              </div>
            {% endif %}

            {% if block.settings.show_view_button %}
              <a href="{{ product.url }}" class="ai-catalog-card-button-{{ ai_gen_id }}">
                {{ block.settings.button_text }}
              </a>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-catalog-empty-state-{{ ai_gen_id }}">
        <h3 class="ai-catalog-empty-state-title-{{ ai_gen_id }}">No collection selected</h3>
        <p class="ai-catalog-empty-state-text-{{ ai_gen_id }}">Choose a collection to display your products in this catalog.</p>
      </div>
    {% endif %}
  </div>
</div>

